<CardWidget>
	Scatter:
		do_rotation: False
		do_translation_y: False
		scale_min: .9
		scale_max: 1
		size: root.card_size
		canvas:
			Rectangle:
				size: root.card_size
				pos: (root.pos[0]+20, root.pos[1]+20)
		Label:
	        pos: root.text_position
	        size: min(self.size)*0.2, min(self.size)*0.2
	        text: 'Hello'
	        color: [0,0,0,1]
		